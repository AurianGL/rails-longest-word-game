<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>

<% grid = @letters %>
<% grid.each do |letter|%>
<span><%= letter %></span>
<% end %>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, grid %>
  <input type="text" name="answer" placeholder="your guess">
  <input type="submit">
</form>
